@using MudBlazor
@using MediatR
@inject IMediator _mediator
@inject ISnackbar _snackBar
<EditForm Model="@CreateUpdateExpenseModel" OnSubmit="SaveAsync">
    <MudDialog>
        <TitleContent>
            @{
                if (CreateUpdateExpenseModel.Id == 0)
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                        Create Expense
                    </MudText>
                }
                else
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                        Update Expense
                    </MudText>
                }
            }
        </TitleContent>
        <DialogContent>
            <MudGrid>
                @if (CreateUpdateExpenseModel.Id != 0)
                {
                    <MudItem xs="12" md="6">
                        <MudTextField Disabled For="@(() => CreateUpdateExpenseModel.Id)" @bind-Value="CreateUpdateExpenseModel.Id" Label="Id" Variant="Variant.Outlined" />
                     </MudItem>
                }
                <MudItem xs="12" md="6">
                    <MudAutocomplete MaxItems="120" T="int" Label="Account" For="@(() => CreateUpdateExpenseModel.AccountId)" @bind-Value="CreateUpdateExpenseModel.AccountId"
                                     Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter"
                                     ResetValueOnEmptyText="true" SearchFunc="SearchAccount"
                                     ToStringFunc="@(i => _accounts.FirstOrDefault(x => x.Id == i)?.Name ?? string.Empty)" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudAutocomplete MaxItems="120" T="int" Label="Category" For="@(() => CreateUpdateExpenseModel.CategoryId)" @bind-Value="CreateUpdateExpenseModel.CategoryId"
                                     Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter"
                                     ResetValueOnEmptyText="true" SearchFunc="SearchIncomeCategory"
                                     ToStringFunc="@(at => _categories.FirstOrDefault(x => x.Id == at)?.Name ?? string.Empty)" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField For="@(() => CreateUpdateExpenseModel.Amount)" @bind-Value="CreateUpdateExpenseModel.Amount" Label="Amount" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudDatePicker Label="MM/dd/yyyy" Editable="true" For="@(() => CreateUpdateExpenseModel.TransactionDate)" @bind-Date="CreateUpdateExpenseModel.TransactionDate"
                                   Mask="@(new DateMask("MM/dd/yyyy"))" DateFormat="MM/dd/yyyy" Placeholder="en-US Date" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField For="@(() => CreateUpdateExpenseModel.Note)" @bind-Value="CreateUpdateExpenseModel.Note" Label="Note" Variant="Variant.Outlined" />
                </MudItem>
            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton Variant="Variant.Filled" OnClick="Cancel">Cancel</MudButton>
            @if (CreateUpdateExpenseModel.Id != 0)
            {
                <MudButton Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Secondary">Update</MudButton>
            }
            else
            {
                <MudButton Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Success">Create</MudButton>
            }
        </DialogActions>
    </MudDialog>
</EditForm>